{% extends 'base.html.twig' %}

{% block body %}
    <div class="container_login">
        <div class="col-sm-6 no_paddingRight_login">
            <div class="block_welcome_login">
                <h1 class="title_welcome_login">Bienvenue sur votre espace</h1>
                <img class="logo_login" src="{{ asset('img/Cartoon_Network_logo.png') }}" alt="">
                <div class="subtitle_register">
                    <p> Pas de compte ? </p>
                    <a href="register"> Inscrivez-vous </a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 no_paddingLeft_login">
            <div class="block_login_login">
                <div>
                    <h3 class="title_login_login">Connexion</h3>
                    <p class="text_login_login">Pour accéder à vos favoris, veuillez vous connecter à l'aide de vos identifiants.</p>
                </div>

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post">
                    <!--<label for="username">Username:</label>-->
                    <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Adresse email" />
                    <br>
                    <!--<label for="password">Password:</label>-->
                    <input type="password" id="password" name="_password" placeholder="Mot de passe" />
                    <br>
                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}

                    <button type="submit" class="submit_login">Se connecter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}